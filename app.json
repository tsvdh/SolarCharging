{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "org.tsvdh.solar-charging",
  "version": "0.1.0",
  "compatibility": ">=12.1.2",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Solar Charging"
  },
  "description": {
    "en": "Automates charging from solar panels",
    "nl": "Laad automatisch of met zonnepanelen"
  },
  "category": [
    "energy"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Tobias Van den Hurk",
    "email": "tsvdhurk@gmail.com"
  },
  "flow": {
    "actions": [
      {
        "title": {
          "en": "Set power to",
          "nl": "Vermogen instellen op"
        },
        "args": [
          {
            "type": "number",
            "name": "watt",
            "placeholder": {
              "en": "power"
            },
            "min": 0,
            "max": 10000,
            "step": 1
          }
        ],
        "id": "set-power"
      }
    ],
    "conditions": [
      {
        "id": "device-should-charge",
        "title": {
          "en": "Device should !{{|not}} charge",
          "nl": "Apparaat moet !{{|niet}} opladen"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=solar-charger"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Solar Charger"
      },
      "class": "evcharger",
      "capabilities": [
        "measure_luminance",
        "lock_mode"
      ],
      "platforms": [
        "local"
      ],
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "connectivity": [],
      "images": {
        "small": "/drivers/solar-charger/assets/images/small.png",
        "large": "/drivers/solar-charger/assets/images/large.png",
        "xlarge": "/drivers/solar-charger/assets/images/xlarge.png"
      },
      "id": "solar-charger",
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Charging",
            "nl": "Opladen"
          },
          "children": [
            {
              "id": "charging_time",
              "type": "number",
              "label": {
                "en": "Time to charge",
                "nl": "Tijd om op te laden"
              },
              "value": 10,
              "min": 1,
              "units": {
                "en": "Hours",
                "nl": "Uren"
              },
              "hint": {
                "en": "Time needed to charge the device",
                "nl": "Tijd nodig om het apparaat op te laden"
              }
            },
            {
              "id": "power_threshold",
              "type": "number",
              "label": {
                "en": "Minimum power",
                "nl": "Minium vermogen"
              },
              "value": 800,
              "min": 0,
              "units": {
                "en": "Watt",
                "nl": "Watt"
              },
              "hint": {
                "en": "Minimum power to start charging",
                "nl": "Minium vermogen om op te laden"
              }
            },
            {
              "id": "average_duration",
              "type": "number",
              "label": {
                "en": "Duration of average power",
                "nl": "Tijdsduur van gemiddeld vermogen"
              },
              "value": 10,
              "min": 5,
              "max": 60,
              "units": {
                "en": "min",
                "nl": "min"
              },
              "hint": {
                "en": "Duration to average power of",
                "nl": "Tijdsduur van gemiddeld vermogen"
              }
            }
          ]
        }
      ]
    }
  ]
}